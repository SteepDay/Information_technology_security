<Window x:Class="lab_1_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_1_client"
        mc:Ignorable="d"
        Title="ГЛАВНОЕ МЕНЮ" Height="400" Width="600" Background="LightBlue">
    <Grid>
        <Button x:Name="addButton" Content="Добавить данные" HorizontalAlignment="Center" VerticalAlignment="Top" Height="35" Width="140" Click="AddData" Grid.Row="1" />
        <ListView x:Name="listviewData" HorizontalAlignment="Stretch" Margin="10,35,10,10" VerticalAlignment="Stretch">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Id}" Header="Id" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Value}" Header="Value" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
